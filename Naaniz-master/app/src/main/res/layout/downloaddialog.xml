<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/sub_location_spinner"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:entries="@array/sub_location"
            android:layout_marginBottom="10dp" />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/food_choice_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_up_txt_bg"
            android:gravity="start"
            android:paddingStart="10dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:text="@string/veg"
            android:textOff="@string/veg"
            android:textOn="@string/non_veg"
            android:textSize="16sp"
            android:theme="@style/food_switch_style"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>
        <Spinner
            android:id="@+id/price_spinner"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:entries="@array/Price_Bar"
            android:layout_marginBottom="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:id="@+id/bt1_dialog"
                android:text="Cancel"
                android:textSize="20sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_weight="1"
                android:id="@+id/bt2_dialog"
                android:text="Submit"
                android:background="#9CCC65"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>