<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SearchView
        android:id="@+id/search_youtube"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rectangle_edit"
        android:queryHint="Search for Recipes"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_youtube">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/youtube_view"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/fire_icon1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_whatshot_black_24dp"
                android:layout_below="@id/youtube_view"
                android:layout_marginTop="23dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/cuisine_select"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/youtube_view"
                android:layout_toEndOf="@+id/fire_icon2"
                android:layout_marginTop="20dp"
                android:text="Cuisines"
                style="@style/trending"/>


            <HorizontalScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/cuisine_select"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Punjabi"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        style="@style/searches_all"
                        android:background="@drawable/rectangle_searches"
                        android:id="@+id/punjabi" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Gujarati"
                        style="@style/searches_all"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/rectangle_searches"
                        android:id="@+id/gujarati" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingStart="10dp"
                        style="@style/searches_all"
                        android:paddingEnd="10dp"
                        android:text="Bengali"
                        android:background="@drawable/rectangle_searches"
                        android:id="@+id/bengali" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingStart="10dp"
                        style="@style/searches_all"
                        android:paddingEnd="10dp"
                        android:text="Kashmiri"
                        android:background="@drawable/rectangle_searches"
                        android:id="@+id/kashmiri" />

                </LinearLayout>

            </HorizontalScrollView>

            <ImageView
                android:id="@+id/fire_icon2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_whatshot_black_24dp"
                android:layout_below="@id/scrollView1"
                android:layout_marginTop="23dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/topTrandingToday"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/scrollView1"
                android:layout_toEndOf="@+id/fire_icon2"
                android:layout_marginTop="20dp"
                android:text="Trending"
                style="@style/trending"/>


            <HorizontalScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/topTrandingToday"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="New Button"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        style="@style/searches_all"
                        android:background="@drawable/rectangle_searches"
                        android:id="@+id/button1" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="New Button"
                        style="@style/searches_all"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/rectangle_searches"
                        android:id="@+id/button2" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingStart="10dp"
                        style="@style/searches_all"
                        android:paddingEnd="10dp"
                        android:text="New Button"
                        android:background="@drawable/rectangle_searches"
                        android:id="@+id/button3" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingStart="10dp"
                        style="@style/searches_all"
                        android:paddingEnd="10dp"
                        android:text="New Button"
                        android:background="@drawable/rectangle_searches"
                        android:id="@+id/button4" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        style="@style/searches_all"
                        android:layout_margin="5dp"
                        android:text="New Button"
                        android:background="@drawable/rectangle_searches"
                        android:id="@+id/button5" />

                </LinearLayout>

            </HorizontalScrollView>

            <ImageView
                android:id="@+id/fire_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_whatshot_black_24dp"
                android:layout_below="@id/scrollView2"
                android:layout_marginTop="23dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/top_searches"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/scrollView2"
                android:layout_toEndOf="@+id/fire_icon"
                android:layout_marginTop="20dp"
                android:text="@string/top_channels_for_your_search"
                style="@style/trending"/>

            <HorizontalScrollView
                android:id="@+id/scrollView3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/top_searches"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="New Button"
                        style="@style/searches_all"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/rectangle_searches"
                        android:id="@+id/bsearch1" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="New Button"
                        android:paddingStart="10dp"
                        style="@style/searches_all"
                        android:paddingEnd="10dp"
                        android:background="@drawable/rectangle_searches"
                        android:id="@+id/bsearch2" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        style="@style/searches_all"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="New Button"
                        android:background="@drawable/rectangle_searches"
                        android:id="@+id/bsearch3" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingStart="10dp"
                        style="@style/searches_all"
                        android:paddingEnd="10dp"
                        android:text="New Button"
                        android:background="@drawable/rectangle_searches"
                        android:id="@+id/bsearch4" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        style="@style/searches_all"
                        android:layout_margin="5dp"
                        android:text="New Button"
                        android:background="@drawable/rectangle_searches"
                        android:id="@+id/bsearch5" />

                </LinearLayout>

            </HorizontalScrollView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>