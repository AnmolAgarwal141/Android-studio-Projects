<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myapplication.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_flight"
        android:name="com.example.myapplication.ui.Flight.FlightFragment"
        android:label="Book Flights"
        tools:layout="@layout/fragment_flight" />

    <fragment
        android:id="@+id/navigation_Hotels"
        android:name="com.example.myapplication.ui.Hotels.HotelFragment"
        android:label="Book Hotels"
        tools:layout="@layout/fragment_hotel" />
    <fragment
        android:id="@+id/navigation_Bookings"
        android:name="com.example.myapplication.ui.BookingStatus.BookingStatusFragment"
        android:label="Booking Status"
        tools:layout="@layout/fragment_bookingstatus" />
    <fragment
        android:id="@+id/navigation_moneymanager"
        android:name="com.example.myapplication.ui.MoneyManager.MoneyManagerFragment"
        android:label="MoneyManager"
        tools:layout="@layout/fragment_moneymanager" />
    <fragment
        android:id="@+id/navigation_Profile"
        android:name="com.example.myapplication.ui.Proflie.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>