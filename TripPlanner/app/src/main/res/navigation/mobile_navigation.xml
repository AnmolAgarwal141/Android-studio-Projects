<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.tripplanner.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_flight"
        android:name="com.example.tripplanner.ui.Flight.FlightFragment"
        android:label="Bookings"
        tools:layout="@layout/fragment_flight" />

    <fragment
        android:id="@+id/navigation_Todo"
        android:name="com.example.tripplanner.ui.Todolist.TodoFragment"
        android:label="TODO list"
        tools:layout="@layout/fragment_todo" />
    <fragment
        android:id="@+id/navigation_moneymanager"
        android:name="com.example.tripplanner.ui.MoneyManager.MoneyManagerFragment"
        android:label="Money Manager"
        tools:layout="@layout/fragment_moneymanager" />
    <fragment
        android:id="@+id/navigation_Profile"
        android:name="com.example.tripplanner.ui.Proflie.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
